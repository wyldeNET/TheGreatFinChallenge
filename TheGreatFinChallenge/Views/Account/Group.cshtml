    var userId = Model.User.pk_UserID;
}

@{ 
    var linechartDataC = Model.LineChartData;
    var linechartDataC2 = Model.DataGroupRanking;
}



@section Styles{
    <link href="~/css/group.css" rel="stylesheet" type="text/css" />
}

@section Scripts{
